[Unit]
Description=IPC Broker
After=network-online.target
Wants=network-online.target

[Service]
Environment=HOME=/home/lleonardo
Environment=APP_MODE=release
WorkingDirectory=/home/lleonardo/bin/ipc-broker
ExecStart=/home/lleonardo/bin/ipc-broker/ipc-broker
Restart=always
User=lleonardo

[Install]
WantedBy=multi-user.target